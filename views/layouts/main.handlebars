<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    {{! Fonts }}
    <link rel='stylesheet' href='https://use.typekit.net/xol7xgn.css' />
    {{! CSS }}
    <link rel='stylesheet' href='/css/reset.css' />
    <link rel='stylesheet' href='/css/style.css' />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM'
      crossorigin='anonymous'
    />
    <title>Top 50 Best Bars Canada</title>
  </head>

  <header>
    <div
      class='container-fluid p-5 text-center shadow-1-strong text-white'
      id='headerSection'
    >

      <h1 id=''>BarFly</h1>
    </div>
    <nav class='navbar navbar-expand-lg' style='background-color: #8d99ae;'>
      <div class='container-fluid'>
        <a class='navbar-brand text-white' href='#'>BarFly</a>
        <button
          class='navbar-toggler'
          type='button'
          data-bs-toggle='collapse'
          data-bs-target='#navbarSupportedContent'
          aria-controls='navbarSupportedContent'
          aria-expanded='false'
          aria-label='Toggle navigation'
        >
          <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarSupportedContent'>
          <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
            <li class='nav-item'>
              <a
                class='nav-link active text-white'
                aria-current='page'
                href='/'
              >Home</a>
            </li>
            <li class='nav-item'>
              <a
                class='nav-link login-signup text-white'
                id='login'
                href='/login'
              >Login/Signup</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link text-white' id='account' href='/account'>My
                Account</a>
            </li>
          </ul>
          <form class='d-flex' role='search'>
            <input
              class='form-control me-2'
              type='search'
              placeholder='Search'
              aria-label='Search'
            />
            <button class='btn btn-outline-light' type='submit'>Search</button>
          </form>
        </div>
      </div>
    </nav>
  </header>

  <body>
    {{{body}}}
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz'
      crossorigin='anonymous'
    ></script>
  </body>

  <footer>
    <div class='d-grid gap-2 d-md-flex justify-content-md-end'>
      <button
        class='btn me-md-2 btn-lg btn-outline-secondary'
        type='button'
      >About Us</button>
      <button class='btn btn-lg btn-outline-secondary' type='button'>Contact Us</button>
    </div>
  </footer>

</html>